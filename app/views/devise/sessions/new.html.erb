<div class="whole-body">
  
  <div class="main-image">
    <img src="main-cover.jpeg" width=100%; height=100%; alt="">
  </div>
  <div class="login-section">
    <div class="login-box">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: 'EMAIL', required: false, placeholder: '이메일', autofocus: true, class: 'form-design' %>
          <%= f.input :password, label: '비밀번호', placeholder: '비밀번호', required: false %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "로그인" %>
        </div>
      <% end %>
        <a class="btn btn-primary" id="sign-up-btn" href="<%= new_registration_path(resource_name) %>" role="button">회원가입</a>
    </div>
  </div>
</div>